<h1 id="mainHeading"> Burger Time </h1>

<ol id="devoured">
    {{#each burgers}}
        {{#unless this.devoured}}
                <li>{{this.burger_name}}</li>
                <a href="/update/{{this.id}}"><button class="devourButton">Eat Me</button></a>
            </div>
        {{/unless}}
    {{/each}}
</ol>

<ol id="notDevoured">
    {{#each burgers}}
        {{#if this.devoured}}
             <li> {{this.burger_name}} </li>
             <a href="/delete/{{this.id}}"><button class="deleteButton">Delete</button></a>             
        {{/if}}  
    {{/each}}
</ol>

<form action="/" method="POST">
    <textarea name="burgerInput"></textarea>
    <button type="submit">Submit</button>
</form>




